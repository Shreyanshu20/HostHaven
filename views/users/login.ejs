<% layout("./layouts/boilerplate.ejs") %>

    <style>
        .auth-container {
            max-width: 450px;
            margin: 2rem auto;
        }

        .auth-card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .auth-header {
            background-color: #f8fafc;
            padding: 1.75rem;
            text-align: center;
            border-bottom: 1px solid #e2e8f0;
        }

        .auth-logo {
            max-width: 150px;
            margin: 0 auto;
        }

        .auth-title {
            color: #2d3748;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            color: #718096;
            font-size: 0.95rem;
        }

        .auth-label {
            color: #4a5568;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .auth-input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .auth-input {
            background-color: white;
            border: 1px solid #e2e8f0;
            border-radius: 0.5rem;
            padding: 0.75rem 2rem 0.75rem 3.5rem;
            font-size: 1rem;
            width: 100%;
            transition: all 0.2s;
            line-height: 1.5;
            height: 45px;
        }

        .auth-input:focus {
            border-color: #3182ce;
            box-shadow: 0 0 0 3px rgba(49, 130, 206, 0.15);
            outline: none;
        }

        .auth-icon-container {
            position: absolute;
            left: 1px;
            top: 33px;
            height: 43px;
            width: 2.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f9fafb;
            border-right: 1px solid #e2e8f0;
            border-top-left-radius: 0.5rem;
            border-bottom-left-radius: 0.5rem;
            pointer-events: none;
        }

        .auth-icon {
            color: #3182ce;
            font-size: 1rem;
        }

        .auth-toggle-btn {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #718096;
            cursor: pointer;
            padding: 0.25rem;
            z-index: 5;
            top: 54px;
        }

        .auth-checkbox {
            margin-bottom: 1.5rem;
        }

        .auth-checkbox input {
            margin-right: 0.5rem;
        }

        .auth-checkbox label {
            color: #4a5568;
        }

        .auth-submit-btn {
            background: linear-gradient(135deg, #3182ce, #2c5282);
            color: white;
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-weight: 500;
            width: 100%;
            margin-bottom: 1.5rem;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(49, 130, 206, 0.2);
        }

        .auth-submit-btn:hover {
            box-shadow: 0 8px 20px rgba(49, 130, 206, 0.5);
        }

        .auth-submit-btn:active {
            transform: translateY(0);
        }

        .auth-link {
            color: #3182ce;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }

        .auth-link:hover {
            color: #2c5282;
            text-decoration: underline;
        }

        .auth-helper {
            color: #718096;
            font-size: 0.9rem;
            text-align: center;
            margin-top: 2rem;
        }
    </style>

    <div class="container">
        <div class="auth-container">
            <div class="card auth-card">
                <div class="auth-header">
                    <div class="auth-logo">
                        <img src="/assets/logo.png" alt="HostHaven Logo" class="img-fluid">
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <h2 class="auth-title text-center">Welcome Back</h2>
                    <p class="auth-subtitle text-center mb-4">Sign in to continue to your account</p>

                    <form action="/login" method="post">
                        <div class="auth-input-group">
                            <label for="username" class="auth-label">Username</label>
                            <div class="auth-icon-container">
                                <i class="fas fa-user auth-icon"></i>
                            </div>
                            <input type="text" id="username" name="username" class="auth-input"
                                placeholder="Enter your username" required>
                        </div>

                        <div class="auth-input-group password-group">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group input-group-custom">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" class="form-control custom-input" id="password" name="password"
                                    placeholder="Create a password" required>
                                <button class="btn password-toggle-btn" type="button"
                                    aria-label="Toggle password visibility">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="auth-checkbox">
                            <input type="checkbox" id="rememberMe" name="rememberMe">
                            <label for="rememberMe">Remember me</label>
                        </div>

                        <button type="submit" class="auth-submit-btn">
                            <i class="fas fa-sign-in-alt me-2"></i>Log In
                        </button>

                        <div class="text-center">
                            <p>Don't have an account? <a href="/signup" class="auth-link">Sign up</a></p>
                        </div>
                    </form>
                </div>
            </div>

            <p class="auth-helper">
                Need help? <a href="/contact" class="auth-link">Contact support</a>
            </p>
        </div>
    </div>

    <script>
        const passwordToggle = document.querySelector('.password-toggle-btn');
        const passwordField = document.querySelector('#password');

        passwordToggle.addEventListener('click', function () {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            this.querySelector('i').classList.toggle('fa-eye');
            this.querySelector('i').classList.toggle('fa-eye-slash');
        });
    </script>