<% layout("./layouts/boilerplate.ejs") %>

    <script>
        let mapToken = "<%= process.env.MAP_TOKEN%>";
        let coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
    </script>

    <div class="container-fluid p-0 mt-4">
        <div class="listing-image-container mb-5 position-relative">
            <img src="<%= listing.image.url %>" alt="<%= listing.title %>"
                class="listing-image img-fluid w-100 rounded-3">
        </div>
    </div>

    <div class="container mt-2">
        <div class="row mb-5 ">
            <div class="col-lg-7 mb-4">
                <div class="listing-details p-4 bg-white rounded-3 shadow-sm">
                    <h1 class="listing-title-show mb-2">
                        <%= listing.title %>
                    </h1>

                    <p class="d-flex align-items-center mb-3 text-secondary">
                        <i class="fas fa-user-circle me-2"></i>
                        <span class="fw-medium">Owner:</span>
                        <span class="ms-2 badge bg-light text-dark border">
                            <%=listing.owner.username%>
                        </span>
                    </p>

                    <p class="text-muted location mb-3">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        <%= listing.location %>, <%= listing.country %>
                    </p>

                    <div class="price-tag mb-4">
                        <span class="fs-3 fw-bold">&#8377;<%= listing.price.toLocaleString('en-IN') %></span>
                        <span class="text-muted">/night</span>
                    </div>

                    <hr class="my-4">

                    <h5 class="mb-3">Description</h5>
                    <p class="listing-description mb-4">
                        <%= listing.description %>
                    </p>

                    <div class="action-buttons">
                        <div class="row g-3">
                            <% if(currentUser && currentUser._id.equals(listing.owner._id)) {%>
                                <div class="col-md-4 col-sm-6 mb-2">
                                    <a href="/listings/<%=listing._id%>/edit"
                                        class="btn btn-primary-outline w-100 h-100">
                                        <i class="fas fa-edit me-2"></i>Edit Listing
                                    </a>
                                </div>
                                <div class="col-md-4 col-sm-6 mb-2">
                                    <button class="btn btn-danger-outline w-100 h-100" data-bs-toggle="modal"
                                        data-bs-target="#deleteListingModal">
                                        <i class="fas fa-trash-alt me-2"></i>Delete Listing
                                    </button>
                                </div>
                                <% } %>
                                    <div class="col-md-4 col-sm-12 mb-2">
                                        <a href="/listings" class="btn btn-back w-100 h-100">
                                            <i class="fas fa-arrow-left me-2"></i>Back to Listings
                                        </a>
                                    </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="additional-info p-4 bg-white rounded-3 shadow-sm h-100">
                    <h5 class="mb-3">Property Highlights</h5>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-home text-primary me-3 fs-4"></i>
                                <div>
                                    <div class="small text-muted">Type</div>
                                    <div>Entire Place</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-bed text-primary me-3 fs-4"></i>
                                <div>
                                    <div class="small text-muted">Bedrooms</div>
                                    <div>2</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-bath text-primary me-3 fs-4"></i>
                                <div>
                                    <div class="small text-muted">Bathrooms</div>
                                    <div>1</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-users text-primary me-3 fs-4"></i>
                                <div>
                                    <div class="small text-muted">Max Guests</div>
                                    <div>4</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <h5 class="mb-3">
                            <i class="fas fa-map-marked-alt text-primary me-2"></i>Location
                        </h5>
                        <div id="map"></div>
                        <div class="map-notice mt-2 text-center">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Exact location provided after booking
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% if(currentUser) { %>
            <div class="card border-0 shadow-sm mb-5">
                <div class="card-body p-4">
                    <h4 class="card-title mb-4">
                        <i class="fas fa-star text-warning me-2"></i>Write Your Review
                    </h4>

                    <form action="/listings/<%= listing._id%>/reviews" method="post" class="needs-validation"
                        novalidate>
                        <div class="mb-4">
                            <label class="form-label fw-medium">Rating</label>
                            <div class="star-rating">
                                <div class="d-flex align-items-center">
                                    <div class="rating-stars">
                                        <input type="radio" id="star5" name="review[rating]" value="5" checked />
                                        <label for="star5" title="5 stars"><i class="fas fa-star"></i></label>

                                        <input type="radio" id="star4" name="review[rating]" value="4" />
                                        <label for="star4" title="4 stars"><i class="fas fa-star"></i></label>

                                        <input type="radio" id="star3" name="review[rating]" value="3" />
                                        <label for="star3" title="3 stars"><i class="fas fa-star"></i></label>

                                        <input type="radio" id="star2" name="review[rating]" value="2" />
                                        <label for="star2" title="2 stars"><i class="fas fa-star"></i></label>

                                        <input type="radio" id="star1" name="review[rating]" value="1" />
                                        <label for="star1" title="1 star"><i class="fas fa-star"></i></label>
                                    </div>
                                    <span id="rating-value" class="ms-3 badge bg-primary px-3 py-2">5 stars</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="review-comment" class="form-label fw-medium">Comment</label>
                            <textarea class="form-control" id="review-comment" name="review[comment]" rows="4"
                                placeholder="Describe your experience..." required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please share your thoughts about this listing.
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-paper-plane me-2"></i>Submit Review
                        </button>
                    </form>
                </div>
            </div>
            <% } %>

                <div class="card border-0 shadow-sm mb-5">
                    <div class="card-body p-4">
                        <h4 class="card-title mb-4">
                            <i class="fas fa-comments text-primary me-2"></i>Reviews
                        </h4>

                        <% if(listing.reviews && listing.reviews.length> 0) { %>
                            <div class="review-list">
                                <% for(review of listing.reviews) { %>
                                    <div class="review-item mb-4 pb-4 border-bottom">
                                        <div class="d-flex flex-column flex-sm-row justify-content-between gap-2 mb-2">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center"
                                                    style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">
                                                        <%= review.author.username%>
                                                    </h6>
                                                    <div class="d-flex flex-wrap align-items-center gap-2 mt-1">
                                                        <span class="stars-container text-warning">
                                                            <% for(let i=0; i < 5; i++) { %>
                                                                <% if(i < review.rating) { %>
                                                                    <i class="fas fa-star"></i>
                                                                    <% } else { %>
                                                                        <i class="far fa-star"></i>
                                                                        <% } %>
                                                                            <% } %>
                                                        </span>
                                                        <span class="badge bg-light text-dark border">
                                                            <%= review.rating %>/5
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                                                <button type="button"
                                                    class="btn btn-sm btn-outline-danger align-self-sm-start"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteReview<%= review._id %>Modal">
                                                    <i class="fas fa-trash me-1"></i>Delete
                                                </button>
                                                <% } %>
                                        </div>

                                        <div class="review-content">
                                            <p class="mb-0 text-secondary">
                                                <%= review.comment %>
                                            </p>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                            <% } else { %>
                                <div class="alert alert-light text-center py-4">
                                    <i class="fas fa-comment-slash fs-3 text-secondary mb-3"></i>
                                    <p class="mb-0">No reviews yet. Be the first to share your experience!</p>
                                </div>
                                <% } %>
                    </div>
                </div>
    </div>

    <div class="modal fade" id="deleteListingModal" tabindex="-1" aria-labelledby="deleteListingModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteListingModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Listing
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">Are you sure you want to delete this listing?</p>
                    <p class="mb-0 text-muted small">This action cannot be undone. All reviews associated with this
                        listing will also be deleted.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/listings/<%=listing._id%>?_method=DELETE" method="post" class="d-inline m-0">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Delete Permanently
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% if(listing.reviews && listing.reviews.length> 0) { %>
        <% for(review of listing.reviews) { %>
            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                <div class="modal fade" id="deleteReview<%= review._id %>Modal" tabindex="-1"
                    aria-labelledby="deleteReview<%= review._id %>ModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="deleteReview<%= review._id %>ModalLabel">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Review
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete your review?</p>
                                <div class="review-preview p-3 bg-light rounded">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="stars-container text-warning me-2">
                                            <% for(let i=0; i < 5; i++) { %>
                                                <% if(i < review.rating) { %>
                                                    <i class="fas fa-star"></i>
                                                    <% } else { %>
                                                        <i class="far fa-star"></i>
                                                        <% } %>
                                                            <% } %>
                                        </div>
                                        <span class="badge bg-light text-dark border">
                                            <%= review.rating %>/5
                                        </span>
                                    </div>
                                    <p class="mb-0 text-secondary small">
                                        "<%= review.comment %>"
                                    </p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                    method="POST" class="d-inline m-0">
                                    <button class="btn btn-danger">
                                        <i class="fas fa-trash me-1"></i>Delete Review
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                    <% } %>
                        <% } %>