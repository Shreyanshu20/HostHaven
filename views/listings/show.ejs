                                            <button type="button" class="btn btn-secondary flex-grow-1 flex-md-grow-0 order-2 order-md-1" data-bs-dismiss="modal">
                                                <i class="fas fa-times me-1"></i>Cancel
                                            </button>
                                            <button type="button" class="btn btn-primary flex-grow-1 flex-md-grow-0 order-1 order-md-2" id="confirmReservation">
                                                <i class="fas fa-check me-1"></i>Confirm Reservation
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="reservationSuccessModal" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header bg-success text-white">
                                            <h5 class="modal-title">
                                                <i class="fas fa-check-circle me-2"></i>Reservation Confirmed!
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white"
                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body text-center py-4">
                                            <div class="mb-3">
                                                <i class="fas fa-calendar-check text-success"
                                                    style="font-size: 4rem;"></i>
                                            </div>
                                            <h4 class="mb-3">Thank you for your reservation!</h4>
                                            <p>Your booking at <strong>
                                                    <%= listing.title %>
                                                </strong> has been confirmed.</p>
                                            <p class="text-muted small">A confirmation email has been sent to your
                                                registered email address.</p>
                                            <div class="alert alert-info mt-3">
                                                <i class="fas fa-info-circle me-2"></i>
                                                <strong>Note:</strong> You won't be charged until check-in.
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-success" data-bs-dismiss="modal">Got
                                                it!</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <script>
                                document.addEventListener('DOMContentLoaded', function () {
                                    if (document.getElementById('checkIn') && document.getElementById('checkOut')) {
                                        const checkIn = document.getElementById('checkIn');
                                        const checkOut = document.getElementById('checkOut');
                                        const guests = document.getElementById('guests');
                                        const nightCount = document.getElementById('nightCount');
                                        const subtotal = document.getElementById('subtotal');
                                        const serviceFee = document.getElementById('serviceFee');
                                        const totalPrice = document.getElementById('totalPrice');
                                        const confirmBtn = document.getElementById('confirmReservation');

                                        let calculatedTotalPrice = 0;
                                        let calculatedServiceFee = 0;
                                        let unavailableDates = [];

                                        document.getElementById('reserveModal').addEventListener('show.bs.modal', function () {
                                            fetch(`/listings/<%= listing._id %>/unavailable-dates`)
                                                .then(response => response.json())
                                                .then(data => {
                                                    unavailableDates = data.unavailableDates.map(date => new Date(date));

                                                    initializeDatepickers();
                                                })
                                                .catch(error => {
                                                    console.error("Error fetching unavailable dates:", error);
                                                    initializeDatepickers();
                                                });
                                        });

                                        function initializeDatepickers() {
                                            const checkInPicker = flatpickr(checkIn, {
                                                minDate: "today",
                                                disable: unavailableDates,
                                                onChange: function (selectedDates, dateStr) {
                                                    const nextDay = new Date(selectedDates[0]);
                                                    nextDay.setDate(nextDay.getDate() + 1);

                                                    checkOutPicker.set('minDate', nextDay);

                                                    if (checkOutPicker.selectedDates[0] &&
                                                        checkOutPicker.selectedDates[0] <= selectedDates[0]) {
                                                        checkOutPicker.setDate(nextDay);
                                                    }

                                                    calculatePrice();
                                                },
                                                onClose: function () {
                                                    calculatePrice();
                                                }
                                            });

                                            const checkOutPicker = flatpickr(checkOut, {
                                                minDate: checkIn.value ? new Date(checkIn.value + 86400000) : "today",
                                                disable: unavailableDates,
                                                onClose: function () {
                                                    calculatePrice();
                                                }
                                            });
                                        }

                                        function calculatePrice() {
                                            if (checkIn.value && checkOut.value) {
                                                const startDate = new Date(checkIn.value);
                                                const endDate = new Date(checkOut.value);

                                                const nights = Math.round((endDate - startDate) / (1000 * 60 * 60 * 24));

                                                if (nights > 0) {
                                                    const price = <%= listing.price %>;
                                                    const subtotalAmount = price * nights;
                                                    const serviceFeeAmount = Math.round(subtotalAmount * 0.12);
                                                    const total = subtotalAmount + serviceFeeAmount;

                                                    calculatedTotalPrice = total;
                                                    calculatedServiceFee = serviceFeeAmount;

                                                    nightCount.textContent = nights;
                                                    subtotal.textContent = '\u20B9 ' + subtotalAmount.toLocaleString('en-IN');
                                                    serviceFee.textContent = '\u20B9 ' + serviceFeeAmount.toLocaleString('en-IN');
                                                    totalPrice.textContent = '\u20B9 ' + total.toLocaleString('en-IN');
                                                }
                                            }
                                        }

                                        confirmBtn.addEventListener('click', function () {
                                            if (!checkIn.value || !checkOut.value) {
                                                alert('Please select both check-in and check-out dates.');
                                                return;
                                            }

                                            const bookingData = {
                                                checkIn: checkIn.value,
                                                checkOut: checkOut.value,
                                                guests: guests.value,
                                                totalPrice: calculatedTotalPrice,
                                                serviceFee: calculatedServiceFee
                                            };

                                            fetch('/listings/<%= listing._id %>/book', {
                                                method: 'POST',
                                                headers: {
                                                    'Content-Type': 'application/json',
                                                },
                                                body: JSON.stringify(bookingData)
                                            })
                                                .then(response => response.json())
                                                .then(data => {
                                                    if (data.success) {
                                                        const reserveModal = bootstrap.Modal.getInstance(document.getElementById('reserveModal'));
                                                        reserveModal.hide();

                                                        setTimeout(() => {
                                                            const successModal = new bootstrap.Modal(document.getElementById('reservationSuccessModal'));
                                                            successModal.show();
                                                        }, 500);
                                                    } else {
                                                        alert(data.error || 'There was an error processing your booking.');
                                                    }
                                                })
                                                .catch(error => {
                                                    console.error('Error making booking:', error);
                                                    alert('There was an error processing your booking. Please try again.');
                                                });
                                        });
                                    }
                                });
                            </script>